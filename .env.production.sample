# Production Environment Variables
# Copy this file to .env.production for production setup
# IMPORTANT: Change all passwords and secrets before deploying!

# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_THIS_SECURE_PRODUCTION_PASSWORD

# Redis Configuration  
REDIS_HOST=redis
REDIS_PORT=6379

# Kafka Configuration
KAFKA_BROKERS=kafka:9092
ZOOKEEPER_CONNECT=zookeeper:2181

# Production Settings
NODE_ENV=production
LOG_LEVEL=info

# API Gateway
GATEWAY_PORT=80

# Security (MUST CHANGE THESE!)
JWT_SECRET=CHANGE_THIS_SUPER_SECURE_JWT_SECRET_FOR_PRODUCTION
BCRYPT_ROUNDS=12

# Database Names
AUTH_DB_NAME=auth_service
USERS_DB_NAME=users_service
