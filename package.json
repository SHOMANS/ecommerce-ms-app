{
  "name": "ecommerce-app",
  "private": true,
  "version": "1.0.0",
  "description": "E-commerce microservices monorepo",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r --parallel start:dev",
    "start": "pnpm -r start",
    "lint": "pnpm -r lint",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "setup:dev": "./scripts/setup-env.sh dev",
    "setup:prod": "./scripts/setup-env.sh prod",
    "validate:dev": "./scripts/validate-env.sh dev",
    "validate:prod": "./scripts/validate-env.sh prod",
    "test:dev": "./scripts/test-env.sh dev",
    "test:prod": "./scripts/test-env.sh prod",
    "ci:build": "pnpm lint && pnpm build",
    "docker:dev": "docker compose --env-file .env.development -f docker-compose.dev.yml up -d",
    "docker:dev:build": "docker compose --env-file .env.development -f docker-compose.dev.yml up -d --build",
    "docker:dev:down": "docker compose --env-file .env.development -f docker-compose.dev.yml down",
    "docker:dev:logs": "docker compose --env-file .env.development -f docker-compose.dev.yml logs -f",
    "docker:prod": "docker compose --env-file .env.production up -d",
    "docker:prod:build": "docker compose --env-file .env.production up -d --build",
    "docker:prod:down": "docker compose --env-file .env.production down",
    "docker:prod:logs": "docker compose --env-file .env.production logs -f",
    "docker:up": "docker compose --env-file .env.development -f docker-compose.dev.yml up -d",
    "docker:down": "docker compose --env-file .env.development -f docker-compose.dev.yml down",
    "docker:logs": "docker compose --env-file .env.development -f docker-compose.dev.yml logs -f"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "keywords": [
    "ecommerce",
    "microservices",
    "nestjs",
    "monorepo"
  ],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.14.0",
  "devDependencies": {
    "@types/node": "^24.3.0",
    "typescript": "^5.9.2",
    "prettier": "^3.6.2"
  }
}