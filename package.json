{
  "name": "ecommerce-app",
  "private": true,
  "version": "1.0.0",
  "description": "E-commerce microservices monorepo",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r --parallel start:dev",
    "start": "pnpm -r start",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "keywords": [
    "ecommerce",
    "microservices",
    "nestjs",
    "monorepo"
  ],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.14.0",
  "devDependencies": {
    "@types/node": "^22.17.0",
    "typescript": "^5.9.2",
    "prettier": "^3.0.0"
  }
}