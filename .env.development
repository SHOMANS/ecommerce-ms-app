# Development Environment Variables
# Copy this file to .env.development for development setup

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
POSTGRES_PASSWORD=root
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres

# Auth Service Database
AUTH_DB_HOST=postgres
AUTH_DB_PORT=5432
AUTH_DB_USERNAME=auth_user
AUTH_DB_PASSWORD=password
AUTH_DB_NAME=auth_service

# Users Service Database
USERS_DB_HOST=postgres
USERS_DB_PORT=5432
USERS_DB_USERNAME=users_user
USERS_DB_PASSWORD=password
USERS_DB_NAME=users_service

# ==============================================
# REDIS CONFIGURATION
# ==============================================
REDIS_HOST=redis
REDIS_PORT=6379
# REDIS_PASSWORD=   # No password in development

# ==============================================
# KAFKA CONFIGURATION
# ==============================================
KAFKA_BROKER_ID=1
KAFKA_CFG_KRAFT_MODE=false
KAFKA_CFG_ZOOKEEPER_CONNECT=zookeeper:2181
KAFKA_CFG_ADVERTISED_LISTENERS=PLAINTEXT://localhost:9092,INTERNAL://kafka:9093
KAFKA_CFG_LISTENERS=PLAINTEXT://0.0.0.0:9092,INTERNAL://0.0.0.0:9093
KAFKA_CFG_LISTENER_SECURITY_PROTOCOL_MAP=PLAINTEXT:PLAINTEXT,INTERNAL:PLAINTEXT
KAFKA_CFG_INTER_BROKER_LISTENER_NAME=INTERNAL
ALLOW_PLAINTEXT_LISTENER=yes
KAFKA_CFG_AUTO_CREATE_TOPICS_ENABLE=true
KAFKA_BROKERS=kafka:9093

# Zookeeper
ALLOW_ANONYMOUS_LOGIN=yes

# ==============================================
# APPLICATION CONFIGURATION
# ==============================================
NODE_ENV=development
LOG_LEVEL=debug

# Service Ports
AUTH_SERVICE_PORT=3001
USERS_SERVICE_PORT=3002

# ==============================================
# SECURITY CONFIGURATION
# ==============================================
JWT_SECRET=development_secret_key
BCRYPT_ROUNDS=10

# ==============================================
# GATEWAY CONFIGURATION
# ==============================================
GATEWAY_PORT=8080
NGINX_PORT=8080
